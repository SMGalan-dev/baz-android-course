<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/available_order_book_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:src="@drawable/ic_bitcoin_logo"
        app:layout_constraintEnd_toEndOf="@id/guideline_icon_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/available_order_book_name"
        app:layout_constraintBottom_toTopOf="@id/available_book_code"
        android:contentDescription="@string/crypto_icon" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/available_order_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/bitcoin"
        android:layout_marginStart="5dp"
        android:paddingTop="5dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guideline_icon_vertical"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/available_book_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/btc_mxn"
        android:paddingVertical="5dp"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/guideline_icon_vertical"
        app:layout_constraintTop_toBottomOf="@id/available_order_book_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:src="@android:drawable/ic_menu_add"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_line"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/darker_gray" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_icon_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.12" />

</androidx.constraintlayout.widget.ConstraintLayout>